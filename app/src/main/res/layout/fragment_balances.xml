<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ui.profile.BalancesFragment"
    android:orientation="vertical"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/common_padding_large">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/common_padding_small2"
                android:layout_marginStart="@dimen/common_padding_medium"
                android:layout_marginEnd="@dimen/common_padding_medium"
                android:layout_marginTop="@dimen/common_padding_medium">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/common_box_height"
                        android:layout_height="@dimen/common_box_height"
                        app:cardCornerRadius="@dimen/common_padding_small2"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/common_padding_medium1"
                        android:background="@color/balance_card_back">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/credit_card_green"
                            android:layout_gravity="center"/>
                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="@dimen/common_padding_medium"
                        android:layout_marginBottom="@dimen/common_padding_medium"
                        android:layout_marginStart="@dimen/common_padding_small2">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Money Balance"
                            android:textSize="@dimen/font_small2"
                            android:textColor="@color/black_text"
                            android:fontFamily="@font/poppins_medium"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$ 0.0"
                            android:textColor="@color/black_text"
                            android:fontFamily="@font/poppins_semibold"
                            android:textSize="@dimen/font_large2"/>

                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/common_padding_small2"
                android:layout_marginStart="@dimen/common_padding_medium"
                android:layout_marginEnd="@dimen/common_padding_medium"
                android:layout_marginTop="@dimen/common_padding_medium">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/common_box_height"
                        android:layout_height="@dimen/common_box_height"
                        app:cardCornerRadius="@dimen/common_padding_small2"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/common_padding_medium1"
                        android:background="@color/balance_card_back">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/coins"
                            android:layout_gravity="center"/>
                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="@dimen/common_padding_medium"
                        android:layout_marginBottom="@dimen/common_padding_medium"
                        android:layout_marginStart="@dimen/common_padding_small2">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Coin Balance"
                            android:textSize="@dimen/font_small2"
                            android:textColor="@color/black_text"
                            android:fontFamily="@font/poppins_medium"/>

                        <TextView
                            android:id="@+id/coinBalance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="x 0"
                            android:textColor="@color/black_text"
                            android:fontFamily="@font/poppins_semibold"
                            android:textSize="@dimen/font_large2"/>

                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Latest update"
                android:layout_marginStart="@dimen/common_padding_medium"
                android:layout_marginTop="@dimen/common_padding_large2"
                android:textColor="@color/black_text"
                android:fontFamily="@font/poppins_medium"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/common_padding_small2"
                android:layout_marginStart="@dimen/common_padding_medium"
                android:layout_marginEnd="@dimen/common_padding_medium"
                android:layout_marginTop="@dimen/common_padding_small1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white_green"
                    android:orientation="horizontal"
                    android:weightSum="5">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/coin_minutes"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/common_padding_medium2"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:orientation="vertical"
                        android:layout_marginTop="@dimen/common_padding_medium"
                        android:layout_marginBottom="@dimen/common_padding_medium"
                        android:layout_marginStart="@dimen/common_padding_medium1">

                        <TextView
                            android:id="@+id/tvLatestCoins"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0 Coins"
                            android:textSize="@dimen/font_small2"
                            android:textColor="@color/green_700"
                            android:fontFamily="@font/poppins_semibold"/>

                        <TextView
                            android:id="@+id/tvLatestPurchageTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1 January 2020, 00:00"
                            android:textColor="@color/green_700"
                            android:fontFamily="@font/poppins_semibold"
                            android:textSize="@dimen/font_small1"/>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvLatestPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:textSize="@dimen/font_small2"
                        android:textColor="@color/green_700"
                        android:text="$ 0"
                        />

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>



</LinearLayout>