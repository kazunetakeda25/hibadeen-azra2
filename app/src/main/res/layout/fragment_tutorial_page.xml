<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.tutorial.TutorialPageFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/buy_coin_gift"
            android:textAlignment="center"
            android:textColor="@color/redTextColor"
            android:textSize="@dimen/font_medium2"
            android:fontFamily="@font/poppins_semibold" />

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="@dimen/common_padding_medium"
            android:layout_marginTop="@dimen/common_padding_large"
            android:layout_marginEnd="@dimen/common_padding_medium"
            app:cardCornerRadius="@dimen/common_padding_small2">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivTutorial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                app:srcCompat="@drawable/onboarding_1_small_v1" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_padding_medium2"
            android:text="@string/message_tutorial_0"
            android:textAlignment="center"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="@color/redTextColor"
            android:textSize="@dimen/font_small2" />
    </LinearLayout>

</RelativeLayout>