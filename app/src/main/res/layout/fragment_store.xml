<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.mainfrag.StoreFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="@dimen/common_padding_medium"
        android:layout_marginEnd="@dimen/common_padding_medium"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/menu_store"
            android:textColor="@color/black_text"
            android:textSize="@dimen/font_large2"
            android:fontFamily="@font/poppins_semibold"
            android:layout_marginTop="@dimen/common_padding_small1"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_into_buy_coins"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_padding_small2"
            app:cardCornerRadius="@dimen/common_padding_small2">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/ivBuyCoins"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    app:srcCompat="@drawable/buy_coins_small_v1"
                    tools:ignore="MissingConstraints" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="@id/ivBuyCoins"
                    app:layout_constraintEnd_toEndOf="@id/ivBuyCoins"
                    app:layout_constraintStart_toStartOf="@id/ivBuyCoins"
                    app:layout_constraintTop_toTopOf="@id/ivBuyCoins">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="top"
                        android:layout_marginStart="@dimen/common_padding_medium1"
                        android:layout_marginTop="@dimen/common_padding_large">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            app:srcCompat="@drawable/coins_white"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/common_padding_small1"
                            android:text="@string/buy_coins"
                            android:textColor="@color/white_text"
                            android:textSize="@dimen/font_medium2"
                            android:fontFamily="@font/poppins_semibold" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/common_padding_medium1"
                        android:layout_marginTop="@dimen/common_padding_small1"
                        android:lineSpacingExtra="@dimen/font_small0"
                        android:text="@string/buy_coins_description"
                        android:textAlignment="textStart"
                        android:textColor="@color/white_text"
                        android:textSize="@dimen/font_small2"
                        android:fontFamily="@font/poppins_medium"/>



                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_into_buy_gifts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_padding_medium1"
            android:layout_marginBottom="@dimen/common_padding_medium2"
            app:cardCornerRadius="@dimen/common_padding_small2">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/ivBuyGifts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    app:srcCompat="@drawable/purchase_gifts_small_v1"
                    tools:ignore="MissingConstraints" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="@id/ivBuyGifts"
                    app:layout_constraintEnd_toEndOf="@id/ivBuyGifts"
                    app:layout_constraintStart_toStartOf="@id/ivBuyGifts"
                    app:layout_constraintTop_toTopOf="@id/ivBuyGifts">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/common_padding_small0"
                        android:layout_marginTop="@dimen/common_padding_large"
                        android:gravity="top">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            app:srcCompat="@drawable/gifts_white" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/common_padding_small1"
                            android:text="@string/buy_gifts"
                            android:textColor="@color/white_text"
                            android:textSize="@dimen/font_medium2"
                            android:fontFamily="@font/poppins_semibold" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/common_padding_medium1"
                        android:layout_marginTop="@dimen/common_padding_small1"
                        android:lineSpacingExtra="@dimen/font_small0"
                        android:text="@string/buy_coins_description"
                        android:textAlignment="textStart"
                        android:textColor="@color/white_text"
                        android:textSize="@dimen/font_small2" />

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>


</ScrollView>