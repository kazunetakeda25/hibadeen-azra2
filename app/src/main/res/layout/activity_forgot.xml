<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.welcome.ForgotActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/common_padding_medium"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/forgot_password"
            android:textColor="@color/redTextColor"
            android:textSize="@dimen/font_large3"
            android:fontFamily="sans-serif-medium"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_padding_medium"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:text="@string/enter_email_password_reset"
            android:textColor="@color/redTextColor"
            android:textSize="@dimen/font_medium2"
            android:fontFamily="sans-serif"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="bottom">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_box_height"
                app:cardCornerRadius="@dimen/common_padding_small2"
                app:cardBackgroundColor="@color/greyEditColor">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/etEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/common_padding_small2"
                    android:layout_marginEnd="@dimen/common_padding_small2"
                    android:background="@null"
                    android:hint="@string/email_address"
                    android:inputType="textEmailAddress"
                    android:maxLength="30"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="@color/grey_500"
                    android:textSize="@dimen/font_medium2"/>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_padding_small2"
                android:orientation="horizontal"
                android:gravity="end">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/remember_password"
                    android:textColor="#339AFC"
                    android:textSize="@dimen/font_medium2"
                    android:fontFamily="sans-serif"/>

                <TextView
                    android:id="@+id/tvLogin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/common_padding_small1"
                    android:text="@string/log_in"
                    android:textColor="#0280EC"
                    android:textSize="@dimen/font_medium2"
                    android:fontFamily="sans-serif-medium"/>

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/cvSend"
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_box_height"
                android:layout_marginTop="@dimen/common_padding_large2"
                android:layout_marginBottom="@dimen/common_padding_large2"
                app:cardBackgroundColor="@color/btnDisableColor"
                app:cardCornerRadius="@dimen/common_padding_small2">

                <TextView
                    android:id="@+id/tvSend"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="@dimen/common_padding_small2"
                    android:text="@string/send_password"
                    android:textColor="@color/white_text"
                    android:textSize="@dimen/font_large0" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llConfirm"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#88000000"
        android:gravity="bottom"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/top_round_background"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="@dimen/common_padding_medium"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/common_padding_medium"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/etCode0"
                    android:layout_width="@dimen/common_padding_large3"
                    android:layout_height="@dimen/common_padding_large3"
                    android:background="@color/greyEditColor"
                    android:maxLength="1"
                    android:textAlignment="center"
                    android:textSize="@dimen/font_large3" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/etCode1"
                    android:layout_width="@dimen/common_padding_large3"
                    android:layout_height="@dimen/common_padding_large3"
                    android:layout_marginStart="@dimen/common_padding_medium"
                    android:background="@color/greyEditColor"
                    android:maxLength="1"
                    android:textAlignment="center"
                    android:textSize="@dimen/font_large3" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/etCode2"
                    android:layout_width="@dimen/common_padding_large3"
                    android:layout_height="@dimen/common_padding_large3"
                    android:layout_marginStart="@dimen/common_padding_medium"
                    android:background="@color/greyEditColor"
                    android:maxLength="1"
                    android:textAlignment="center"
                    android:textSize="@dimen/font_large3" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/etCode3"
                    android:layout_width="@dimen/common_padding_large3"
                    android:layout_height="@dimen/common_padding_large3"
                    android:layout_marginStart="@dimen/common_padding_medium"
                    android:background="@color/greyEditColor"
                    android:maxLength="1"
                    android:textAlignment="center"
                    android:textSize="@dimen/font_large3" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_padding_medium"
                android:fontFamily="sans-serif"
                android:text="@string/enter_digit_code"
                android:textColor="@color/black"
                android:textSize="@dimen/font_medium2" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cvConfirm"
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_box_height"
                android:layout_marginTop="@dimen/common_padding_large2"
                app:cardBackgroundColor="@color/black"
                app:cardCornerRadius="@dimen/common_padding_small2">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/confirm"
                    android:textColor="@color/white_text"
                    android:textSize="@dimen/font_large0" />

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_padding_medium"
                android:layout_marginBottom="@dimen/common_padding_medium"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:text="@string/didnt_receive_link"
                    android:textColor="#339AFC"
                    android:textSize="@dimen/font_medium2" />

                <TextView
                    android:id="@+id/tvResend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/common_padding_small1"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/resend"
                    android:textColor="#0280EC"
                    android:textSize="@dimen/font_medium2" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>