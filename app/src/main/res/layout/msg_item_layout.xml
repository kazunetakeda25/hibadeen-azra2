<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:layout_marginBottom="@dimen/common_padding_small2">

    <ImageView
        android:id="@+id/ivDegree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/common_padding_small1"
        android:src="@drawable/crown"/>

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="@dimen/common_padding_small1"
        android:padding="@dimen/common_padding_small1"
        android:text="lora:"
        android:textAlignment="textStart"
        android:textColor="@color/white_text"
        android:textSize="@dimen/font_medium" />

    <TextView
        android:id="@+id/tvContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="@dimen/common_padding_small1"
        android:padding="@dimen/common_padding_small1"
        android:text="How are you!"
        android:textAlignment="textStart"
        android:textColor="@color/white_text"
        android:textSize="@dimen/font_medium" />

</LinearLayout>
