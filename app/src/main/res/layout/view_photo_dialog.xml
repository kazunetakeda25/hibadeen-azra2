<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvCamera"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/common_padding_medium"
        android:drawableStart="@drawable/ic_menu_camera"
        android:drawablePadding="@dimen/common_padding_medium"
        android:drawableTint="@color/colorPrimary"
        android:text="@string/camera"
        android:textColor="@color/black"
        android:textSize="@dimen/font_large0" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="@dimen/common_padding_medium"
        android:layout_marginEnd="@dimen/common_padding_medium" />

    <TextView
        android:id="@+id/tvGallery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/common_padding_medium"
        android:drawableStart="@drawable/ic_menu_gallery"
        android:drawablePadding="@dimen/common_padding_medium"
        android:drawableTint="@color/colorPrimary"
        android:text="@string/gallery"
        android:textColor="@color/black"
        android:textSize="@dimen/font_large0" />

</LinearLayout>