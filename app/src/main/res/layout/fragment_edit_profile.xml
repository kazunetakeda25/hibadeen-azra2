<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.profile.EditProfileFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="@dimen/common_padding_medium">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/ivBackBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/chevron_left"
                    android:visibility="invisible"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/edit_profile"
                    android:textAlignment="center"
                    android:textColor="@color/black_text"
                    android:textSize="@dimen/font_medium2"
                    android:fontFamily="@font/poppins_semibold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    />

                <androidx.cardview.widget.CardView
                    android:id="@+id/ivDoneBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/btnEnableColor"
                    app:cardCornerRadius="@dimen/common_padding_small1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/common_padding_small1"
                        android:layout_marginBottom="@dimen/common_padding_small1"
                        android:layout_marginStart="@dimen/common_padding_medium"
                        android:layout_marginEnd="@dimen/common_padding_medium"
                        android:text="@string/done"
                        android:textColor="@color/white_text"
                        android:textSize="@dimen/font_medium"
                        />
                </androidx.cardview.widget.CardView>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clProfileImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/common_padding_medium1">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/ivProfile"
                    android:layout_width="@dimen/avatar_rectangle_large_width"
                    android:layout_height="@dimen/avatar_rectangle_large_width"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/avatar"
                    android:visibility="visible"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/edit_o"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:layout_marginTop="@dimen/common_padding_medium"
                android:layout_marginStart="@dimen/common_padding_large"
                android:layout_marginEnd="@dimen/common_padding_large"
                android:orientation="horizontal"
                android:weightSum="3">

                <ImageView
                    android:id="@+id/ivAvatar_1"
                    android:layout_width="@dimen/common_padding_large3"
                    android:layout_height="@dimen/common_padding_large3"
                    android:src="@drawable/avatar_1"
                    android:layout_weight="1"/>
                <ImageView
                    android:id="@+id/ivAvatar_2"
                    android:layout_width="@dimen/common_padding_large3"
                    android:layout_height="@dimen/common_padding_large3"
                    android:src="@drawable/avatar_2"
                    android:layout_weight="1"/>
                <ImageView
                    android:id="@+id/ivAvatar_3"
                    android:layout_width="@dimen/common_padding_large3"
                    android:layout_height="@dimen/common_padding_large3"
                    android:src="@drawable/avatar_3"
                    android:layout_weight="1"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:layout_marginTop="@dimen/common_padding_medium"
                android:layout_marginStart="@dimen/common_padding_large"
                android:layout_marginEnd="@dimen/common_padding_large"
                android:orientation="horizontal"
                android:weightSum="3">

                <ImageView
                    android:id="@+id/ivAvatar_4"
                    android:layout_width="@dimen/common_padding_large3"
                    android:layout_height="@dimen/common_padding_large3"
                    android:src="@drawable/avatar_4"
                    android:layout_weight="1"/>
                <ImageView
                    android:id="@+id/ivAvatar_5"
                    android:layout_width="@dimen/common_padding_large3"
                    android:layout_height="@dimen/common_padding_large3"
                    android:src="@drawable/avatar_5"
                    android:layout_weight="1"/>
                <ImageView
                    android:id="@+id/ivAvatar_6"
                    android:layout_width="@dimen/common_padding_large3"
                    android:layout_height="@dimen/common_padding_large3"
                    android:src="@drawable/avatar_6"
                    android:layout_weight="1"/>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_padding_medium"
                android:text="@string/first_name"
                android:textColor="@color/black_text"
                android:textSize="@dimen/font_medium"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/common_padding_small1"
                app:cardBackgroundColor="@color/grey_200"
                app:cardCornerRadius="@dimen/common_padding_small2">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/etFirstName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/common_padding_small2"
                    android:layout_marginEnd="@dimen/common_padding_small2"
                    android:padding="@dimen/common_padding_small2"
                    android:background="@null"
                    android:hint="@string/first_name"
                    android:inputType="textEmailAddress"
                    android:maxLength="30"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="@color/grey_500"
                    android:textSize="@dimen/font_medium" />

            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/last_name"
                android:textColor="@color/black_text"
                android:textSize="@dimen/font_medium"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/common_padding_small1"
                app:cardBackgroundColor="@color/grey_200"
                app:cardCornerRadius="@dimen/common_padding_small2">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/etLastName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/common_padding_small2"
                    android:layout_marginEnd="@dimen/common_padding_small2"
                    android:padding="@dimen/common_padding_small2"
                    android:background="@null"
                    android:hint="@string/last_name"
                    android:inputType="textEmailAddress"
                    android:maxLength="30"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="@color/grey_500"
                    android:textSize="@dimen/font_medium" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/username"
                android:textSize="@dimen/font_medium"
                android:textColor="@color/black_text"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/common_padding_small1"
                app:cardBackgroundColor="@color/grey_200"
                app:cardCornerRadius="@dimen/common_padding_small2">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/etUserName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/common_padding_small2"
                    android:layout_marginEnd="@dimen/common_padding_small2"
                    android:background="@null"
                    android:hint="@string/username"
                    android:inputType="textEmailAddress"
                    android:maxLength="30"
                    android:padding="@dimen/common_padding_small2"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="@color/grey_500"
                    android:textSize="@dimen/font_medium" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/bio"
                android:textColor="@color/black_text"
                android:textSize="@dimen/font_medium" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/common_padding_small1"
                android:layout_marginEnd="@dimen/common_padding_small1"
                android:layout_marginTop="@dimen/common_padding_small1"
                android:layout_marginBottom="@dimen/common_padding_large"
                app:cardBackgroundColor="@color/grey_200"
                app:cardCornerRadius="@dimen/common_padding_small2">

                <EditText
                    android:id="@+id/etBio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="@string/bio"
                    android:textColor="@color/black"
                    android:inputType="textMultiLine"
                    android:layout_marginTop="@dimen/common_padding_small2"
                    android:layout_marginBottom="@dimen/common_padding_small2"
                    android:layout_marginStart="@dimen/common_padding_medium"
                    android:layout_marginEnd="@dimen/common_padding_medium"
                    android:lineSpacingExtra="@dimen/font_small0"
                    android:textSize="@dimen/font_medium"
                    />

            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>
</FrameLayout>
